{
  "manifest_version": 3,
  "name": "eTMF Note Pad",
  "version": "1.0",
  "description": "Take notes for each URL with a persistent sidebar",
  "permissions": [
    "storage",
    "tabs",
    "sidePanel",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}